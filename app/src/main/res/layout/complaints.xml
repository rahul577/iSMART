<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="321dp"
        android:layout_height="273dp"
        android:id="@+id/complaintImage"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="32dp"
        android:src="@drawable/up"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:id="@+id/OpenCameraFAB"
        android:layout_height="0dp"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/complaintImage"
        android:clickable="true"
        android:src="@android:drawable/ic_input_add"
        android:layout_marginLeft="84dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="118dp" />
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:id="@+id/ImagePicker"
        android:layout_height="0dp"
        android:clickable="true"
        android:src="@android:drawable/ic_dialog_info"
        android:layout_marginLeft="172dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="118dp"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/complaintImage"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@android:drawable/ic_menu_send"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/complaintImage"
        android:layout_marginRight="50dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="125dp"
        android:id="@+id/floatingActionButtonsent" />

    <Spinner
        android:layout_width="300dp"
        android:id="@+id/spinner"
        android:layout_height="wrap_content"
        android:layout_marginRight="42dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/floatingActionButtonsent"></Spinner>

</android.support.constraint.ConstraintLayout>